{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
