{
"compilerOptions":
    {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
        "@/*": ["*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
},
"include": [
    "src"
],
"exclude": [
    "node_modules"
]
}